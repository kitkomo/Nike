{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src/",
		"paths": {
			"@/assets/*": ["assets/*"],
			"@/components/*": ["components/*"],
			"@/ui/*": ["components/ui/*"],
			"@/screens/*": ["components/screens/*"],

			// "@/shared/*": ["shared/*"],
			// "@/hooks/*": ["hooks/*"],
			// "@/services/*": ["services/*"],
			// "@/utils/*": ["utils/*"],
			// "@/configs/*": ["configs/*"],
			// "@/store/*": ["store/*"],
			// "@/api/*": ["api/*"],
		}
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
